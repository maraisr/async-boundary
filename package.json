{
	"name": "async-boundary",
	"version": "0.0.2",
	"description": "A React async-boundary that couples an error-boundary as well as a suspense container",
	"keywords": [
		"suspense",
		"react",
		"async boundary",
		"error boundary"
	],
	"repository": "mariasr/async-boundary",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "hi@marais.io",
		"url": "https://marais.io"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"main": "dist/index.js",
	"unpkg": "dist/index.min.js",
	"module": "dist/index.mjs",
	"types": "types/index.d.ts",
	"files": [
		"dist",
		"types"
	],
	"scripts": {
		"build": "rollup -c",
		"format": "prettier \"{*,src/*,bench/*,.github/**/*}.+(tsx|js|yml|md)\" --write",
		"prepublishOnly": "yarn build"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"devDependencies": {
		"@marais/tsconfig": "^0.0.1",
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "11.2.1",
		"@types/node": "^14.14.41",
		"@types/react": "^17.0.3",
		"prettier": "^2.2.1",
		"react": "^17.0.2",
		"rollup": "2.45.2",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.30.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	},
	"peerDependencies": {
		"react": ">= 16"
	},
	"engines": {
		"node": ">= 10"
	},
	"volta": {
		"node": "15.14.0",
		"yarn": "1.22.10"
	}
}
